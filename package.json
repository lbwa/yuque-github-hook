{
  "name": "yuque-sync",
  "version": "1.0.0",
  "description": "yuque sync action based on repository_dispatch github event",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lbwa/yuque-github-hook.git"
  },
  "author": "Liu Bowen <mr_lbw@outlook.com>",
  "license": "MIT",
  "private": false,
  "bugs": {
    "url": "https://github.com/lbwa/yuque-github-hook/issues"
  },
  "homepage": "https://github.com/lbwa/yuque-github-hook#readme",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,sass,less,md}\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build": "tsc -p tsconfig.json",
    "watch": "yarn build -w",
    "prepublish": "yarn build"
  },
  "keywords": [
    "yuque",
    "github",
    "sync"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^5.0.0",
    "fs-extra": "^10.0.0",
    "func-async": "^0.1.0",
    "simple-git": "^2.39.0",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@lbwa/eslint-config-typescript": "^0.4.1",
    "@lbwa/prettier-config": "^0.1.0",
    "@lbwa/tsconfig": "^0.1.0",
    "@types/fs-extra": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  },
  "prettier": "@lbwa/prettier-config",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,sass,less,md}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
